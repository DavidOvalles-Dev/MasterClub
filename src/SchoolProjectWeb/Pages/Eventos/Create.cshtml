@page
@model SchoolProjectWeb.Pages.Eventos.CreateModel

<div class="container">
    <h1 class="text-center mb-4">Registrar Nuevo Evento</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="post" class="shadow-lg p-4 rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group">
                    <label asp-for="Evento.NombreEvento" class="font-weight-bold">Nombre del Evento</label>
                    <input asp-for="Evento.NombreEvento" class="form-control" placeholder="Ej. Reunión de planificación" />
                    <span asp-validation-for="Evento.NombreEvento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="font-weight-bold">Actividad</label>
                    <select asp-for="Evento.ActividadId" class="form-control" asp-items="ViewBag.ActividadId">
                        <option value="">Selecciona una actividad</option>
                    </select>
                    <span asp-validation-for="Evento.ActividadId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Evento.Fecha" class="font-weight-bold">Fecha del Evento</label>
                    <input asp-for="Evento.Fecha" class="form-control" type="datetime-local" />
                    <span asp-validation-for="Evento.Fecha" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Evento.Lugar" class="font-weight-bold">Lugar</label>
                    <input asp-for="Evento.Lugar" class="form-control" placeholder="Ej. Sala 1, Campo Principal" />
                    <span asp-validation-for="Evento.Lugar" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Evento.Descripcion" class="font-weight-bold">Descripción</label>
                    <textarea asp-for="Evento.Descripcion" class="form-control" rows="4" placeholder="Escribe una breve descripción del evento"></textarea>
                    <span asp-validation-for="Evento.Descripcion" class="text-danger"></span>
                </div>

                <div class="form-group mt-4 text-center">
                    <button type="submit" class="btn btn-success btn-lg">Registrar Evento</button>
                    <a asp-page="Index" class="btn btn-secondary btn-lg ml-3">Volver a la Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>
