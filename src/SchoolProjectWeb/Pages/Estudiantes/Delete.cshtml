@page
@model SchoolProjectWeb.Pages_Estudiantes.DeleteModel

@{
    ViewData["Title"] = "Eliminar Miembro";
}

<h1 class="text-center display-4">Eliminar Miembro del Club</h1>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg mb-4">
                <div class="card-body">
                    <p class="lead">¿Estás seguro de que quieres eliminar este miembro del club?</p>

                    <dl class="row">
                        <dt class="col-sm-3 font-weight-bold">Nombre</dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Estudiante.Nombre)
                        </dd>

                        <dt class="col-sm-3 font-weight-bold">Apellido</dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Estudiante.Apellido)
                        </dd>

                        <dt class="col-sm-3 font-weight-bold">Categoría</dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Estudiante.Grado)
                        </dd>

                        <dt class="col-sm-3 font-weight-bold">Fecha de Nacimiento</dt>
                        <dd class="col-sm-9">
                            @Model.Estudiante.FechaNacimiento.ToString("dd/MM/yyyy")
                        </dd>
                    </dl>

                    <div class="form-group mt-4">
                        <form method="post" id="deleteForm">
                            <input type="hidden" asp-for="Estudiante.Id" />
                            <button type="submit" class="btn btn-danger btn-lg">Eliminar Miembro</button>
                            <a asp-page="./Index" class="btn btn-secondary btn-lg ml-3">Volver al Club</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
