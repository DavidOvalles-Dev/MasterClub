@page
@model SchoolProjectWeb.Pages.Actividades.EditModel

@{
    ViewData["Title"] = "Editar Actividad";
}

<h1>Editar Actividad</h1>
<hr />

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <input type="hidden" asp-for="Actividad.Id" />

            <div class="form-group">
                <label asp-for="Actividad.NombreActividad" class="control-label">Nombre de la actividad</label>
                <input asp-for="Actividad.NombreActividad" class="form-control" />
                <span asp-validation-for="Actividad.NombreActividad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Actividad.Descripcion" class="control-label">Descripcion</label>
                <textarea asp-for="Actividad.Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Actividad.Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Actividad.CupoMaximo" class="control-label">Cupo Máximo</label>
                <input asp-for="Actividad.CupoMaximo" class="form-control" type="number" />
                <span asp-validation-for="Actividad.CupoMaximo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Actividad.ProfesorId" class="control-label">Profesor encargado</label>
                <select asp-for="Actividad.ProfesorId" class="form-control" asp-items="ViewBag.ProfesorId"></select>
                <span asp-validation-for="Actividad.ProfesorId" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary ml-2">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>

