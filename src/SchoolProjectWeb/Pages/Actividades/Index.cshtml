@page
@model SchoolProjectWeb.Pages.Actividades.IndexModel
@{
    ViewData["Title"] = "Actividades";
}

<h1>Actividades</h1>

<a asp-page="./Create" class="btn btn-primary mb-3">
    <i class="fas fa-plus"></i> Crear Actividad
</a>

<table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Cupo Máximo</th>
            <th>Entrenador</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Actividades == null || !Model.Actividades.Any())
        {
            <tr>
                <td colspan="6" class="text-center">No hay actividades registradas.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model.Actividades)
            {
                <tr>
                    <td>@item.Id</td>
                    <td class="truncate-nombreactividad">@item.NombreActividad</td>
                    <td class="truncate-text">@item.Descripcion</td>
                    <td>@item.CupoMaximo</td>
                    <td>@item.Profesor?.Nombre</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<style>
    .truncate-text {
        white-space: nowrap;         
        overflow: hidden;           
        text-overflow: ellipsis;    
        max-width: 200px;            
    }

    .truncate-nombreactividad{
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 200px;
    }
</style>
