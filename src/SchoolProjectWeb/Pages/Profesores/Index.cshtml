@page
@model SchoolProjectWeb.Pages.Profesores.IndexModel
@{
    ViewData["Title"] = "Entrenadores";
}

<h1>Entrenadores</h1>

<!-- Botón para crear un nuevo profesor -->
<a asp-page="./Create" class="btn btn-primary mb-3">Crear Entrenador</a>

<!-- Tabla con listado de profesores -->
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Especialidad</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Profesores)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>@item.Especialidad</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
